<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background">

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:orientation="horizontal"
          android:background="@drawable/tab"
          android:layout_marginTop="22dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentStart="true"
          android:id="@+id/linearLayout3"
          >

          <ImageView android:id="@+id/new_reply"
                     android:layout_width="122dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:src="@drawable/touxiang"/>


          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                         android:id="@+id/relpy1"
                         android:layout_width="wrap_content"
                         android:layout_height="53dp"
                         android:text="Hello World"
                         android:layout_gravity="center"
                         android:textSize="25dp"/>


               </LinearLayout>
               <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">

                    <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:src="@drawable/bufeng"
                         android:baselineAlignBottom="true"
                         android:id="@+id/imageView4"
                         />
               </LinearLayout>

          </LinearLayout>
     </LinearLayout>

     <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
     android:layout_marginTop="27dp"
     android:background="@drawable/tab"
     android:gravity="center"
     android:id="@+id/linearLayout"
     android:layout_below="@+id/linearLayout3"
     android:layout_alignParentStart="true"
     >
     <ImageView android:id="@+id/rizi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rizhi"
                android:layout_marginLeft="20dp"/>


     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1"
               >


               <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ri"
                    />

               <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/enter"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/enter_rizi"
                    />


          </LinearLayout>
     </LinearLayout>
</LinearLayout>

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"
          android:layout_marginTop="23dp"
          android:background="@drawable/tab"
          android:gravity="center"
          android:layout_below="@+id/linearLayout"
          android:layout_alignParentStart="true"
          android:id="@+id/linearLayout4"
          >


          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >


                    <ImageView android:id="@+id/shoucang"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/shouchang"
                               android:layout_marginLeft="20dp"
                               android:layout_weight="0.07"
                         />

                    <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:layout_marginLeft="15dp"
                         android:src="@drawable/shou"
                         android:id="@+id/imageView"
                         android:layout_weight="0.19"
                         />

                    <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/enter"
                         android:layout_marginLeft="210dp"
                         android:layout_marginTop="8dp"
                         android:id="@+id/enter_shoucang"
                         />


               </LinearLayout>
          </LinearLayout>
     </LinearLayout>

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"
          android:background="@drawable/tab"
          android:gravity="center"
          android:layout_below="@+id/linearLayout4"
          android:layout_alignParentStart="true"
          android:id="@+id/linearLayout5"
          >


          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >


                    <ImageView android:id="@+id/biaoqing"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/biaoqing"
                               android:layout_marginLeft="20dp"
                               android:layout_weight="0.07"
                         />

                    <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:layout_marginLeft="15dp"
                         android:src="@drawable/biao"
                         android:layout_weight="0.19"
                         />

                    <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/enter"
                         android:layout_marginLeft="210dp"
                         android:layout_marginTop="8dp"
                         android:id="@+id/enter_biaoqing"
                         />


               </LinearLayout>
          </LinearLayout>
     </LinearLayout>

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"
          android:background="@drawable/tab"
          android:gravity="center"
          android:layout_below="@+id/linearLayout5"
          android:layout_alignParentStart="true"
          android:layout_marginTop="26dp"
          >


          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >


                    <ImageView android:id="@+id/shezhi"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/seting"
                               android:layout_marginLeft="20dp"
                               android:layout_weight="0.07"
                         />

                    <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:layout_marginLeft="15dp"
                         android:src="@drawable/shezhi"
                         android:layout_weight="0.19"
                         />

                    <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/enter"
                         android:layout_marginLeft="210dp"
                         android:layout_marginTop="8dp"
                         android:id="@+id/enter_seting"
                         />


               </LinearLayout>
          </LinearLayout>
     </LinearLayout>
</RelativeLayout>