<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
               android:background="@drawable/background">


     <include layout="@layout/activity_search"/>

     <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/line"
          />
     <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/activity_horizontal_margin"
          android:background="@drawable/tab">

          <ImageView android:id="@+id/new_reply"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/msg"/>


          <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

               <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">


                    <TextView
                         android:id="@+id/relpy1"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="新的回复"
                         android:textSize="25dp"
                         android:textColor="@color/black"/>


               </LinearLayout>
               <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">
                    <TextView
                         android:id="@+id/reply2"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="守望者在#特普朗#话题中回复了你"
                         android:textColor="@color/black"/>
               </LinearLayout>

          </LinearLayout>
     </LinearLayout>

     <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/line"
          />

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:background="@drawable/tab"
          android:layout_marginTop="@dimen/activity_horizontal_margin">

          <ImageView android:id="@+id/new_follow"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/msg"/>


          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                         android:id="@+id/follow1"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="新的关注"
                         android:textSize="25dp"
                         android:textColor="@color/black"/>


               </LinearLayout>
               <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">
                    <TextView
                         android:id="@+id/follow2"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="小小关注了你"
                         android:textColor="@color/black"/>
               </LinearLayout>

          </LinearLayout>
     </LinearLayout>


     <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/line"
          />

     <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/line"
          />

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:background="@drawable/tab"
          android:layout_marginTop="@dimen/activity_horizontal_margin">
          <ImageView android:id="@+id/new_msg"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/msg"/>



          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                         android:id="@+id/nickname"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="小小"
                         android:textSize="25dp"
                         android:textColor="@color/black"/>


               </LinearLayout>
               <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">
                    <TextView
                         android:id="@+id/msg"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="你好！"
                         android:textColor="@color/black"/>
               </LinearLayout>

          </LinearLayout>
     </LinearLayout>


</LinearLayout>